.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  width: 1px;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item  cover-image {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 10rpx;
}

.tab-bar-item  .text {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.4);
}
.tab-bar-item  .text.select-text{
  color: #3366FF;
}
/* 遮罩 */
.shadow{
  width: 100%;
  height: 100%;
  z-index: 80;
  /* position: absolute; */
  height: 100vh;
  top: 0;
  background-color: #000;
  opacity: 0.5;
}
/* 上滑高度 */
.choosen{
  width: 100%;
  height: 100%; 
  position: fixed;
  top: 0;
  background-color: #fff;
  z-index: 98;
  background-image: url(https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0306_redt_fa%402x.jpg)!important;
    background-repeat: no-repeat;
    background-size: cover;
}
/* 内容 */
.container-box {
  display: flex;
  height: 100%;
  flex-direction: column;
  width: 100%;
  border-radius: 15rpx;
  margin: 0 auto;
  z-index: 98;
  padding-left:67rpx;
}
.close{
  text-align: right;
}
.close image{
  width: 64rpx;
  height: 64rpx;
}
