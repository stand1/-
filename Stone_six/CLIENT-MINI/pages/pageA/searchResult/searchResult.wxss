.nav .text {
  height: 60rpx;

}

.nav {
  display: flex;
  padding: 32rpx;
  padding-bottom: 14rpx;
  justify-content: space-between;
}

.nav .act {
  color: #e7392b;
  border-bottom: 2rpx solid #e7392b;
}

.main {
  /* padding: 32rpx; */
 padding-top: 14rpx;
}

.main .block {
  display: flex;
  align-items: center;
margin-bottom: 32rpx;
}

.main .tit {
  margin-bottom: 28rpx;
}

.main .block image {
  width: 220rpx;
  height: 140rpx;
  border-radius: 16rpx;
  margin-right: 18rpx;

}

.main .rt .title {
  font-size: 40rpx;
  color: #000;
  font-weight: 700;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.main .rt {
width: 446rpx;
}

.main .desp {
  color: #9b9b9b;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

}

.main .more {
  font-size: 28rpx;
  color: #2299f2;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  border-bottom: 16rpx solid #f2f3f5;
}
.search {
  display: flex;
  justify-content: space-between;
  align-items:center;
 padding: 30rpx 32rpx;
}
.search .inpus {
  display: flex;
  align-items:center;
  justify-content: space-between;
  background-color: #f9f9f9;
  width: 540rpx;
  height: 60rpx;
padding: 20rpx 32rpx;
}
.search .inpus image{
  width: 32rpx;
  height: 32rpx;
}