/* pages/publish/image/index.wxss */
page{
  width: 100%;
  box-sizing: border-box;
  padding: 0 32rpx 32rpx 32rpx;
}
.flex{
  display: flex;
}
.header{
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 32rpx;
}
.header button{
  font-size: 32rpx;
  padding: 0;
  font-weight: 400;
}
.header .save{
  /* display: inline-block; */
  /* width: 80rpx; */
  width: auto;
  color: #f81e36;
  margin-left: 0;
  margin-right: 50rpx;
}
.header .publish{
  width: 104rpx;
  height: 56rpx;
  margin-left: 0;
  margin-right: 0;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
  background-color: #f81e36;
  border-radius: 28rpx;
}
.imgList {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.imgList  .img_item {
    width: 180rpx;
    height: 180rpx;
    margin-right: 24rpx;
    margin-bottom: 24rpx;
    box-shadow:0rpx 4rpx 28rpx 0rpx rgba(0,0,0,0.06);
    border-radius: 16rpx;
    position: relative;
}
.img_item.nomr {
  margin-right: 0;
}
.img_item  image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}
.img_item  .img_close {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  top: 10rpx;
  right: 10rpx;   
  background-image: url("https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0227_redt_close@2x.png");
  background-repeat: no-repeat;
  background-size: contain;
}
.add_img {
  width: 180rpx;
  height: 180rpx;
  border-radius:16rpx;
  background-image: url("https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0224_redt_add@2x.png");
  background-repeat: no-repeat;
  background-size: contain;
  margin-bottom: 24rpx;
  position: relative;
}
.add_img  button{
    position: absolute;
    top: 0;
    right: 0;
    width: 180rpx;
    height: 180rpx;
    opacity: 0;
    /* font-size: 56rpx; */
    /* color: #a5a5a5; */
}
.text_box {
  position: relative;
}
textarea {
  width: 100%;
  border: none;
  font-size: 28rpx;
}
textarea::-webkit-input-placeholder {
  color: #999;
}
.text_box  .num_tip{
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 0;
  bottom: 20rpx;
}
.tag_box{
  text-align: left;
}
.tag_box  .select_row{
    height: 96rpx;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #F2F3F5;
}
.select_row  .icon{
  flex: none;
  width: 48rpx;
  height: 48rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  margin-right: 20rpx;
  background-image: url('https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/icons/publish_video/tag_icon_select.png');
}
.select_row  .label{
  width: 1rpx;
  flex: 1;
  font-size:32rpx;
  color: #999;
  line-height: 44rpx;
  text-align: left;
}
.tag_box  .select_row .right{
  flex: none;
  display: flex;
  align-items: center;
}
.select_row .right .select_value{
  line-height: 34rpx;
  font-size: 24rpx;
  color: #9B9B9B;
}
.select_row  .right .select_icon{
  width: 24rpx;
  height: 24rpx;
  margin-left: 12rpx;
  background-image: url('https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/icons/publish_video/right_icon_select.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.tag_box  .title{
  font-size: 24rpx;
  color: #999;
  line-height: 52rpx;
  margin-bottom: 20rpx;
}
.tag_box  .tag_wrap{
  display: flex;
  color: #000;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F2F3F5;
  overflow-x: scroll;
}
.tag_box  .tag_wrap  .tag_tiem{
  height: 48rpx;
  line-height: 48rpx;
  background: #fff;
  border-radius: 25rpx;
  border: 2rpx solid rgba(242,243,245,1);
  margin-left: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  flex: none;
}
.tag_wrap .tag_tiem:nth-child(1){
  margin-left: 0;
}
.tag_wrap .tag_tiem  .btn_rm{
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
  background: url('https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0224_redt_close_bluck@2x.png') no-repeat;
  background-size: 100% 100%;
}
.tag_box.no_border .select_row{
  border-bottom: none;
}
.foot_row{
  display: flex;
  height: 98rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 50rpx;
  bottom: 30rpx;
  padding-left: 60rpx;
  border-top: 2rpx solid #F2F3F5;
  align-items: center;
  box-sizing: border-box;
}
.foot_row  .btn{
  width: 48rpx;
  height: 48rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.foot_row  .btn_label{
  background-image: url('https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0224_redt_icon-ziti@2x.png');
  margin-right: 60rpx;
}
.foot_row  .btn_addr{
  background-image: url('https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0224_redt_icon-map@2x.png');
}
.foot_row  .btn_select{
  display: flex;
  width:280rpx;
  height:68rpx;
  background:#4a4a4a;
  border-radius: 34rpx;
  /* margin-left: 214rpx; */
  margin-left: 360rpx;
  align-items: center;
  color: #fff;
  font-size:32rpx;
  padding-left: 30rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
}
.foot_row  .btn_select  .text{
  width: 1rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.foot_row  .btn_select  .icon{
  width: 24rpx;
  height: 18rpx;
  flex: none;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url('https://sixeco-redt.oss-cn-shenzhen.aliyuncs.com/0225_redt_pull@2x.png');
}

.fixed .btn{
  justify-content: center;
}