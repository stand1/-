    <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
    <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" title-class="hhh"/>
  </van-dropdown-menu> -->
  </view>
  <view class="overlay" wx:if="{{show}}" bindtap="onClickHide">
    <scroll-view scroll-y="true" enhanced="true" show-scrollbar="false" class="left">
      <view wx:for="{{navSrc}}" wx:for-index="index" wx:for-item="item" wx:key="index" data-methodType="{{item.id}}"
        catchtap="onClickLeftItem" class="leftItem {{(selectNavId == item.id) ? 'selectNavBg' : ''}}"
        data-index="{{index}}" data-item="{{item}}">
        <view class="leftTitle">{{item.name}}</view>
        <view class="leftDetail">{{item.detail}}</view>
      </view>
    </scroll-view>
    <scroll-view scroll-y="true" enhanced="true" show-scrollbar="false" class="right">
      <view wx:for="{{rightItems}}" wx:for-index="index" wx:for-item="item" wx:key="index" data-methodType="{{item.id}}"
        catchtap="onClickRightItem" class="rightItem " data-index="{{index}}" data-item="{{item}}">
        <view class="rightTitle">{{item.carType}}</view>
        <image class="selectImage {{(wxs.isActive(selectedRightIds, item.id)) ?  'selectRightItem' : ''}}"
          src="/icons/usercenter/selected@2x.png"></image>
      </view>
    </scroll-view>
  </view>
  <div class="flex-container">
    <div class="flex-item">
      <image src="/icons/E3001.png"></image>
      <view class="sourceTag">#外观</view>
      <view class="title">新建文件夹</view>
      <view class="date">2020-09-15</view>
    </div>
