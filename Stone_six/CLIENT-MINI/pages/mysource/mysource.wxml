<wxs src="./mysource.wxs" module="wxs"></wxs>
<view class="page">
  <headers titleStr="我的素材"></headers>
  <view style="z-index:100;position: fixed;width:100%;height:96rpx;background-color:white">
    <van-search style="z-index:100;position: fixed;width:686rpx;height:72rpx;margin-left:32rpx;margin-top:12rpx"
      value="{{ value }}" shape="round" placeholder="在当前场景下搜索" />
  </view>

  <view class="titles">
    <view class="titleItem" bindtap="onClickShow">
      <view class="title">全部车系</view>
      <image src="{{show ? '/icons/usercenter/up.png': '/icons/usercenter/downblack.png'}}"></image>
    </view>
    <view class="titleItem">
      <view class="title">文件类型</view>
      <image src="/icons/usercenter/downblack.png"></image>
    </view>
    <view class="titleItem">
      <view class="title">全部类型</view>
      <image src="/icons/usercenter/downblack.png"></image>
    </view>
    <view class="titleItem">
      <view class="title">排序</view>
      <image src="/icons/usercenter/downblack.png"></image>
    </view>
