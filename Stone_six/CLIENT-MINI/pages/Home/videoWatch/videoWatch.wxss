/* pages/Home/videoWatch/videoWatch.wxss */
.content {
  padding: 32rpx 0;
}

.content .block {
  position: relative;
}

.content .block image.bg {
  position: relative;
  width: 100%;
  height: 352rpx;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.3), 0px 2px 4px 0px rgba(0, 0, 0, 0.04), 0px 8px 20px 0px rgba(0, 0, 0, 0.15);
  /* border-radius: 32rpx; */
  display: block;
}

.content .block .time {
  position: absolute;
  left: 32rpx;
  top: 142rpx;
  padding: 0 15rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: rgba(0, 0, 0, 0.64);
  border-radius: 24rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}

.content .block .like {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 24rpx;
  bottom: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .block .like image {
  width: 40rpx;
  height: 40rpx;
}

.content .block .videoIcon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -40rpx;
  margin-left: -40rpx;
}
.content .block .head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
}
.content .block .head .lf{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .block .head .name{
  font-size: 20rpx;
  color: #928c8c;
}
.content .block .head .lf image{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.content .block .head .rt image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 44rpx;
}
.content .block .lf .tit{
  color: #767676;
  font-size: 28rpx;
}