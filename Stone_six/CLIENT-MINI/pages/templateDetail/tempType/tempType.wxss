/* pages/tempType/tempType.wxss */
.tempType{
  width: 100%;
  box-sizing: border-box;
}
.tempType .search{
  display: flex;
  align-items: center;
  width: 686rpx;
  height: 72rpx;
  background: #F2F2F2;
  border-radius: 36rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.tempType .search image{
  width: 32rpx;
  height: 32rpx;
}
.tempType .search input{
  width: 560rpx;
  height: 70rpx;
  border: none;
  margin-left: 14rpx;
}
.tempType .search .phcolor{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #AFAFAF;
}
.top{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}
.topRight .picker{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9B9B9B;
}
.topRight .picker image{
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}
.itemBox{
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx;
  display: flex;
  flex-wrap: wrap
}
.itemBox .item{
  width: 326rpx;
  height: 484rpx;
  border-radius: 32rpx;
  margin-right: 34rpx;
  margin-bottom: 32rpx;
}
.itemBox .item image{
  width: 326rpx;
  height: 484rpx;
  border-radius: 32rpx;
}
.itemBox .itemActive{
  margin-right: 0rpx;
}
.tempType .previewBox{
  width: 100%;
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background-color: rgba(0,0,0,0.6);
  padding: 148rpx 72rpx 300rpx;
}
.previewPoster{
  width: 606rpx;
  height: 846rpx;
}
.previewPoster image{
  width: 606rpx;
  height: 846rpx;
}
.previewFooter{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 56rpx;
  position: relative;
}
.previewFooter .box{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.previewFooter .item{
  width: 280rpx;
  height: 96rpx;
  background: #3366FF;
  border-radius: 56rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.previewFooter .itemImg{
  background: #333333;
}
.previewFooter .itemImg image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}
.previewBox .close{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.previewBox .close image{
  width: 72rpx;
  height: 72rpx;
}