    <view class="label"># 车型外观</view>
    <view class="like">
      <image src="/static/img/like_gray.png"></image>
    </view>
  </view> -->
</scroll-view>


<view class="title-bar">
  <view class="title">{{'最新上传'}}</view>
</view>
<view style="margin-bottom:40px">
  <recommend list="{{isNewlist}}" favoriteType="1"></recommend>
</view>

