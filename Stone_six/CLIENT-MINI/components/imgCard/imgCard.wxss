.title-bar {
  height: 60rpx;
  padding: 0 32rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title-bar .title {
  font-weight: bold;
  font-size: 44rpx;
}

.title-bar .right-option {
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-bar text {
  font-size: 28rpx;
  color: #BDBEC7;
  font-weight: bold;
}

.title-bar image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 4rpx;
}


.watImg {
  padding: 0 32rpx;
  display: flex;
  margin-bottom: 64rpx;
}

.watImg .img {
  width: 100%;
  position: relative;
}

.watImg .img .videoIcon {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40rpx;
  margin-top: -40rpx;
}

.watImg .first,
.watImg .two {
  width: 100%;
  border-radius: 10rpx;
  height: 330rpx;
}

.box_two .img+.img {
  margin-left: 20rpx;
}

.watImg .videoIcon {
  width: 80rpx;
  height: 80rpx;
}

.watImg .rt image.three {
  width: 158rpx;
  height: 158rpx;
  border-radius: 10rpx;
}

.watImg .lf image.three {
  width: 100%;
  height: 330rpx;
  border-radius: 10rpx;
}

.watImg .box {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;

}

.box_f .lf,
.box_f .rt {
  flex: 1;
  width: 100%;
}

.box_f .rt {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.box_f .rt .img {
  width: 47%;
  margin-left: 3%;
  /* align-content: normal; */
}

.box_f .rt .img:first-child {
  width: 100%;
}

.box_f .rt .img:first-child image.three {
  width: 100%;
}

.box_f .rt image.three {
  width: 100%;
}

.five .rt .img:first-child {
  width: 47%;
}

.watImg .rt .txt {
  position: absolute;
  top: 0;
  width: 100%;
  height: 158rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 29rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pimg {
  display: flex;
  align-items: center;
  margin-bottom: 64rpx;
}
.pimg .video{
  position: relative;
  margin-left: 23rpx;
}
.pimg .video image {
  width: 564rpx;
  height: 332rpx;
  background: #D8D8D8;
  border-radius: 48rpx;
}

.pimg .video .videoIcon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -40rpx;
  margin-left: -40rpx;
}