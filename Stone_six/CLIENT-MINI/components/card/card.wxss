.item-box {
  flex: none;
  width: 100%;
  /* height: 150rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.item-box image {
  width: 100%;
  /* height: 100%; */
  border-radius: 40rpx 40rpx 0 0;
  display: block;
}

.item-box .img {
  min-height: 464rpx;
}

.item-box .like image {
  width: 40rpx;
  height: 40rpx;
}

.item-box .article {
  background-color: #fff;
  padding: 20rpx;
  font-size: 24rpx;
  border-radius: 40rpx;
  height: 160rpx;
  position: relative;
}

.item-box .article image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
}

.item-box .article .desp {
  color: rgba(189, 190, 199, 1);
  font-size: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 164rpx;
  margin-top: 12rpx;
  margin-bottom: 4rpx;
}

.item-box .article .tit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 600;
  color: #302F2F;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
}

.icon text {
  color: #000;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.item-box {
  display: inline-block;
  /* width: 384rpx; */
  /* height: 480rpx; */
  position: relative;
  /* margin-right: 40rpx; */
  margin-bottom: 32rpx;
  border-radius: 0 0 40rpx 40rpx;
  overflow: hidden;
}
.className{
  margin-top: 40rpx;
}
/* .item-box:nth-child(1) {
  margin-left: 32rpx;
} */
.item-box .icon {
  position: absolute;
  top: 34rpx;
  left: 24rpx;

}

.item-box .use {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-box .use image {
  width: 44rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  height: 44rpx;
}

.item-box .icon text {
  width: 64rpx;
  height: 32rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: rgba(13, 13, 13, 0.8);
  display: inline-block;
  line-height: 32rpx;
  border-radius: 12rpx;
}

.item-box .icon image {
  width: 40rpx;
  z-index: 22;
}

.item-box .label {
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 24rpx;
  position: absolute;
  bottom: 84rpx;
  left: 0%;
  border-radius: 60rpx;
  font-weight: bold;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
}

.item-box .like {
  width: 90%;
  position: absolute;
  bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  left: 50%;
  margin-left: -45%;
}