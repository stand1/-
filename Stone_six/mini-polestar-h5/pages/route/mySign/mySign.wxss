/* pages/route/mySign/mySign.wxss */
.mySign{
  width: 750rpx;
  box-sizing: border-box;
  padding-top: 160rpx;
}
.nav{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
  border-bottom: 2rpx solid #979797;
  padding:26rpx 0 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: #fff;
}
.nav .navItem{
  width: 221rpx;
  text-align: center;
}
.nav .navActive{
  font-weight: bold;
  position: relative;
}
.navActive view{
  width: 221rpx;
  height: 4rpx;
  background-color: #000000;
  position: absolute;
  top: 86rpx;
  left: 0;
}