/* pages/my/my.wxss */
.myContent{
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #000000;
}
.myContent .myContentTop{
  width: 100%;
  height: 408rpx;
  box-sizing: border-box;
  padding-top: 56rpx;
  font-size: 40rpx;
}
.myContent .myContentTop .userImg{
  margin: 0 auto 32rpx;
  width: 140rpx;
  height: 140rpx;
  background: #d8d8d8;
  border-radius: 50%;
}
.myContent .myContentTop .userImg image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.myContent .myContentTop .name{
  text-align: center;
  font-weight: bold;
}
.myContentB{
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.myContentB .item{
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  border-top: 2rpx solid rgba(16,24,32,0.15);
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  padding-right: 30rpx;
}
.myContentB .item:last-child{
  border-bottom: 2rpx solid rgba(16,24,32,0.15);
}
.myContentB .item .itemL{
  display: flex;
  align-items: center;
}
.myContentB .item .itemL image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 28rpx;
}
.myContentB .item .itemR image{
  width: 24rpx;
  height: 24rpx;
}
.myContent .txt{
  font-size: 30rpx;
  color: #adadad;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
}
.btn{
  width: 100%;
  display: flex;
  justify-content: center;
}
.btn button{
  border: none;
  font-size: 36rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #57be69;
  margin-top: 20rpx;
}
/* 遮罩层 */
.wrapperBox{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrapperBox .wrapper{
  width: 690rpx;
  /* height: 90%; */
  background: #ffffff;
  position: relative;
}
.top{
  width: 690rpx;
  height: 350rpx;
  background: #53565a;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top image{
  width: 116rpx;
  height: 120rpx;
}
.btm{
  width: 690rpx;
  height: 480rpx;
  box-sizing: border-box;
  background: #ffffff;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #000000;
  position: relative;
  padding-top: 88rpx;
}
.btm .userImg{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -29rpx;
  left: 296rpx;
}
.btm .userName{
  text-align: center
}
.btm .txt{
  color: #000;
  font-size: 28rpx;
  margin: 48rpx 60rpx 64rpx;
}
.btm .txt text{
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Semibold;
  font-weight: bold;
  color: #000000;
}
.btm .btn button{
  width: 570rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: #1aad19;
  margin: 0 auto;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
  border: none;
  border-radius: 0;
}