  <!-- 团队及个人 -->
  <van-overlay show="{{ showTeam }}">
    <view class="wrapperBox">
      <view class="wrapper wrappers" style="height: 825rpx;">
         <view class="close" bindtap="onTeamClickHide">
            <image src="/static/img/icon_close.png"></image>
         </view>
         <view class="content cenBox">
            <view class="title">报名方式</view>
            <view class="btn" data-type="1" bindtap="goJoinUrl">
              <text>个人报名</text>
              <image src="/static/icon/arrowW.png"></image>
            </view>
