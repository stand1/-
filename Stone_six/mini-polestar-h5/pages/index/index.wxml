<view class="index, {{showAgreement?'indexs':''}}">
  <!-- 头部导航 -->
  <view class="indexTop">
    <view class="swiper">
      <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500">
        <block wx:for="{{swiperList}}" wx:key="index">
          <swiper-item>
            <view class="swiper-item" bindtap="goTests" data-index="{{index}}">
              <image mode="widthFix" src="{{item.imgUrl}}"></image>
            </view>
          </swiper-item>
        </block>
      </swiper> 
    </view>
  </view>
  <!-- 我要提问--用户列表 -->
  <view class="userList">
    <view class="userListBox">
      <view class="title">导师阵容</view>
      <swiper class="userListBoxTop">
				<block wx:for="{{userList}}" wx:key="index">
					<swiper-item>
						<view class="userItem" bindtap="changeUser" data-id="{{item.id}}">
							<image src="{{item.imgUrl}}"></image>
							<view class="txt txts">{{item.name}} <text>{{item.company}}</text></view>
              <view class="txt">{{item.title}}</view>
						</view>
					</swiper-item>
				</block>
			</swiper>
      <view class="userListBoxB" bindtap="toAnswer">
        <view>常见问题</view>
        <view><image src="../../static/icon/arrowW.png"></image></view>
      </view>
    </view>
  </view>
