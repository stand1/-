/* component/teams/teams.wxss */
.teams{
  width: 750rpx;
  box-sizing: border-box;
  padding-top: 48rpx;
}
.teams .titles{
  font-size: 56rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0,0,0,0.85);
  padding: 0rpx 0 0rpx 30rpx;
}
.contentBox{
  width: 100%;
  box-sizing: border-box;
  padding: 0 32rpx 0 28rpx;
}
.contentBox .item{
  width: 690rpx;
  /* height: 562rpx; */
  background: #ffffff;
  /* border-radius: 16rpx; */
  /* box-shadow: 0px 0px 20rpx 0px rgba(0,0,0,0.20);   */
  margin-bottom: 40rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx 36rpx 38rpx;
  /* border-top: 2rpx solid rgba(16,24,32,0.15); */
}
.contentBox .item .itemTop{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.contentBox .item .itemTop .itemTopL{
  display: flex;
  align-items: center;
}
.contentBox .item .itemTop .itemTopL>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8px;
  margin-left: 2rpx;
  margin-right: 22rpx;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt{
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt .title{
  font-size: 36rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt .captainBox{
  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt .captain{
  background: #ff7500;
  border-radius: 4rpx;
  color: #fff;
  font-size: 20rpx;
  width: 80rpx;
  height: 32rpx;
  display: inline-block;
  text-align: center;
  margin-right: 8rpx;
}
.itemTopR{
  color: #6d7278;
  font-size: 32rpx;
}
.itemCent{
  font-size: 22rpx;
  color: #000000;
}
.itemCent .title{
  font-size: 32rpx;
  color: #000000;
  font-weight: bolder;
}
.itemCent .txtShow{
  width: 622rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.itemCent .itemCentImg{
  width: 622rpx;
  height: 162rpx;
  background: #d8d8d8;
  margin: 20rpx 0 8rpx;
}
.itemCent .itemCentImg image{
  width: 622rpx;
  height: 162rpx;
}
.itemB{
  margin-top: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  color: #000000;
}
.itemB .itemBL{
  display: flex;
  align-items: center;
}
.itemB .itemBL .itemBLApply{
  width: 156rpx;
  height: 48rpx;
  background: #ff7500;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #ffffff;
}
.itemB .itemBL .imgList{
  display: flex;
  align-items: center;
}
.itemB .itemBL .imgList image{
  width: 48rpx;
  height: 48rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}
.itemB .itemBR{
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.itemB .itemBR .refuse{
  color: #f33434;
  margin-right: 48rpx;
}