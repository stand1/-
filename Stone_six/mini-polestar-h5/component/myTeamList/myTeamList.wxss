/* component/myTeamList/myTeamList.wxss */
.contentBox{
  width: 100%;
  box-sizing: border-box;
  padding: 0 32rpx 0 28rpx;
}
.contentBox .item{
  width: 690rpx;
  background: #ffffff;
  /* border-radius: 16rpx; */
  /* box-shadow: 0px 0px 20rpx 0px rgba(0,0,0,0.20);   */
  margin-bottom: 40rpx;
  box-sizing: border-box;
  padding: 40rpx 0rpx 36rpx 0rpx;
  /* padding: 40rpx 30rpx 36rpx 38rpx; */
  border-top: 2rpx solid rgba(16,24,32,0.15);
}
.contentBox .item .itemTop{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx 0rpx 38rpx;
}
.contentBox .item .itemTop .itemTopL{
  display: flex;
  align-items: center;
}
.contentBox .item .itemTop .itemTopL>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8px;
  margin-left: 2rpx;
  margin-right: 22rpx;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt{
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt .title{
  font-size: 36rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contentBox .item .itemTop .itemTopL .itemTopLtxt .captain{
  background: #ff7500;
  border-radius: 4rpx;
  color: #fff;
  font-size: 20rpx;
  width: 80rpx;
  height: 32rpx;
  display: inline-block;
  text-align: center;
  margin-right: 8rpx;
}
.itemTopR{
  color: #6d7278;
  font-size: 32rpx;
}
.itemCent{
  font-size: 22rpx;
  color: #000000;
  padding: 0rpx 30rpx 0rpx 38rpx;
}
.itemCent .title{
  font-size: 32rpx;
  color: #000000;
  font-weight: bolder;
}
.itemCent .txtShow{
  width: 622rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.itemCent .itemCentImg{
  width: 622rpx;
  height: 162rpx;
  background: #d8d8d8;
  margin: 20rpx 0 8rpx;
}
.itemCent .itemCentImg image{
  width: 622rpx;
  height: 162rpx;
}
.itemB{
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #000000;
  text-align: center;
}
.itemB .itemBs .btn{
  width: 690rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  border: 2rpx solid #333333;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  color: #000000;
  margin-bottom: 40rpx;
}
.itemB .itemBs .btnA{
  background: #53565a;
  color: #ffffff;
  border: none;
}
.itemB .itemBs .btnB{
  background: #ff7500;
  color: #ffffff;
  border: none;
}