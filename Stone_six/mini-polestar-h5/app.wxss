/**app.wxss**/
.container {
  margin-left: 15rpx;
  margin-right: 15rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* 居中对其div内的任何元素，水平对齐 */
  /* align-items: center;  */
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  /* background-color: aqua */
} 

.title-bar {
  height: 60rpx;
  padding: 0 32rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title-bar .title {
  font-weight: bold;
  font-size: 44rpx;
}

.title-bar .right-option {
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-bar text {
  font-size: 28rpx;
  color: #BDBEC7;
  font-weight: bold;
}

.title-bar image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 4rpx;
}
.add{
  width: 100rpx;
  height: 100rpx;
  background: #3366FF;
  box-shadow: 0px 6px 18px 0px rgba(51, 102, 255, 0.48);
  border-radius: 50%;
  position: fixed;
  right: 32rpx;
  bottom: 134rpx;
  z-index: 9;
  font-size: 90rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 编辑文章，视频，图片通用样式 */
.fixed{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
}
.fixed .block{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 32rpx;
  border: 2rpx solid #F2F3F5;
}
.fixed .block .lf {
  display: flex;
  align-items: center;
  color: #999999;
  font-size: 32rpx;
}
.fixed .block .lf image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.fixed .block .rt image{
  width: 24rpx;
  height: 24rpx;
}
.fixed .btn{
  padding: 82rpx 72rpx;
  display: flex;
  justify-content: space-between;
}
.fixed .btn view{
  width: 280rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 96rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #3366FF;
}
.fixed .btn view.save{
  background-color: #333333;
}
/* 引入vant内置样式 */
