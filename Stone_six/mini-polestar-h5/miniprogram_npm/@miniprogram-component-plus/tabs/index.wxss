.weui-tabs {
  width: 100%
}

.weui-tabs-bar__wrp {
  width: 100%;
  background: #fff
}

.weui-tabs-bar__content {
  padding: 0 32rpx;
  width: 100%;
  white-space: nowrap
}

.weui-tabs-bar__item {
  padding: 0 32rpx;
  display: inline-block
}

.weui-tabs-bar__title {
  display: inline-block;
  border-bottom-width: 2px;
  border-bottom-style: solid;
  border-bottom-color: transparent
}